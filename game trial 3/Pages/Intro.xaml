<Page x:Class="game_trial_3.Pages.Intro"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      Title="GamePage" Height="700" Width="1000" UseLayoutRounding="True">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Images/pokeball.png">
            </ImageBrush>
        </Grid.Background>
        <Canvas x:Name="GameScreen" Focusable="True">
            <Image Source="pack://application:,,,/Images/Prof Oak.png" 
                   x:Name="Player" 
                   Canvas.Right="100" 
                   Canvas.Top="30"
                   Width="400" 
                   Height="400">
                    
            </Image>
        </Canvas>
    </Grid>

</Page>